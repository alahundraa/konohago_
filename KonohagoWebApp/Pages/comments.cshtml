<body class="u-body">
    <header class="u-align-left u-clearfix u-header u-header" id="sec-e27a"><div class="u-clearfix u-sheet u-sheet-1"></div></header>
    <div class="u-clearfix u-layout-wrap u-layout-wrap-1">
        <div class="u-gutter-0 u-layout">
            <div class="u-layout-row">
                <div class="u-align-left u-container-style u-layout-cell u-right-cell u-size-60 u-white u-layout-cell-1">
                    <div class="u-container-layout u-container-layout-1">
                        <div class="u-form u-form-1">
                            @if (HttpContext.Session.GetString("role") != "Guest")
                            {
                                <form method="POST" class="u-clearfix u-form-spacing-24 u-form-vertical u-inner-form" style="padding: 24px;" source="email" name="form" enctype="multipart/form-data">
                                    <input type="hidden" id="siteId" name="siteId" value="165207">
                                    <input type="hidden" id="pageId" name="pageId" value="165209">
                                    <div class="u-form-group u-form-message u-form-group-1">
                                        <label for="message-3b9a" class="u-form-control-hidden u-label">Message</label>
                                        <textarea asp-for="Comment.Text" placeholder="введите ваш комментарий" rows="4" cols="50" id="message-3b9a" class="u-border-2 u-border-black u-border-no-left u-border-no-right u-border-no-top u-input u-input-rectangle u-input-1" required=""></textarea>
                                        <span asp-validation-for="Comment.Text"></span>
                                    </div>
                                    <div class="u-align-left u-form-group u-form-submit u-form-group-2">
                                        <button type="submit" class="u-black u-btn u-btn-round u-btn-submit u-button-style u-hover-grey-60 u-radius-50 u-btn-1">
                                            ДОБАВИТЬ<br>
                                        </button>
                                        <input type="submit" value="submit" class="u-form-control-hidden">
                                    </div>
                                    <div class="u-form-send-message u-form-send-success"> Thank you! Your message has been sent. </div>
                                    <div class="u-form-send-error u-form-send-message"> Unable to send your message. Please fix errors then try again. </div>
                                    <input type="hidden" value="" name="recaptchaResponse">
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="u-clearfix u-white u-section-1" id="sec-8679">
        <div class="u-clearfix u-sheet u-sheet-1">
            @if (Model.comments.Count > 0) ;
            @foreach (var comment in Model.comments)
            {
            <div class="u-clearfix u-gutter-0 u-layout-wrap u-layout-wrap-1">
                <div class="u-layout">
                    <div class="u-layout-row">
                        <div class="u-align-left u-container-style u-layout-cell u-right-cell u-size-37 u-layout-cell-2">
                            <div class="u-container-layout u-container-layout-2">
                                <a href="/Profile?id=@comment.User_id"> <h2 class="u-text u-text-1">@comment.Username</h2></a>
                                    <br>@comment.Text
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
    </section>
</body>
</html>