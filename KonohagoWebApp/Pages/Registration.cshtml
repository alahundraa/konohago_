@page

@model KonohagoWebApp.Pages.RegistrationModel
@{
    ViewData["Title"] = "Registration";
    var except = ViewData["Message"];
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/registration.css" type="text/css" />
</head>
<body>
    <section class="forms-section">
        <h1 class="section-title"></h1>
        <div style="color:red">@ViewData["message"]</div>
        <div class="forms">

            <div class="form-wrapper is-active">
                <button type="button" class="switcher switcher-login">
                    Вход
                    <span class="underline"></span>
                </button>
                <form method="post" asp-page-handler="AuthorizationForm" class="form form-login">
                    <fieldset>
                        <legend>Please, enter your email and password for login.</legend>
                        <div class="input-block">
                            <label for="login-email">E-mail</label>
                            <input id="login-email" type="email" asp-for="Email" required>
                        </div>
                        <div class="input-block">
                            <label for="login-password">Пароль</label>
                            <input id="login-password" type="password" asp-for="Password" required>
                        </div>
                    </fieldset>
                    <button type="submit" class="btn-login">Войти</button>
                </form>
            </div>

            <div class="form-wrapper">
                <button type="button" class="switcher switcher-signup">
                    Регистрация
                    <span class="underline"></span>
                </button>
                <form asp-page-handler="RegistrationForm" class="form form-signup">
                    <fieldset>
                        <legend>Please, enter your email, password and password confirmation for sign up.</legend>
                        <div class="input-block">
                            <label for="signup-Name">Name</label>
                            <input id="signup-Name" type="text" asp-for="User.Name" required>
                        </div>
                        <div class="input-block">
                            <label for="signup-Surname">E-mail</label>
                            <input id="signup-Surname" type="text" asp-for="User.Surname" required>
                        </div>
                        <div class="input-block">
                            <label>Имя пользователя</label>
                            <input id="signup-Nickname" type="text" asp-for="User.Nickname" required>
                        </div>
                        <div class="input-block">
                            <label for="signup-email">E-mail</label>
                            <input id="signup-email" type="email" asp-for="User.Email" required>
                        </div>
                        <div class="input-block">
                            <label for="signup-password">Пароль</label>
                            <input id="signup-password" type="password" asp-for="Password" required>
                        </div>
                        <div class="input-block">
                            <label for="signup-password-confirm">Повторите пароль</label>
                            <input id="signup-password-confirm" type="password" asp-for="ConfirmPassword" required>
                        </div>
                    </fieldset>
                    <button  type="submit" class="btn-login">Регистрация</button>
                </form>
            </div>
        </div>
    </section>
</body>
</html>
<script src="~/js/registration.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>


