@page
@using KonohagoWebApp.Models
@model KonohagoWebApp.Pages.TitlePageModel
@{
    var anime = Model.anime;
}
<html>
<body>
    <html lang="en">

    <head>
        <meta charset="utf-8">
        <title>Document</title>

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="/css/pageOfTitle.css" type="text/css" />
    </head>

    <body>
        <hr>
        <main id="main">
            <header>
                <p>@anime.Name</p>
            </header>
            @if (!Model.isLike)
            {
            <form method="post">
            <div class="star-rating">
                <div class="star-rating__wrap">
                    <input class="star-rating__input" id="star-rating-5" type="submit" name="rating" value="5">
                    <label class="star-rating__ico fa fa-star-o fa-lg" for="star-rating-5" title="5 out of 5 stars"></label>
                </div>
            </div>
            </form>
            }

            <div id="img-div">
                <figure>
                    <img src="@anime.img_path"
                         alt="many of the characters of Ghibli movies all together in a park" class="figure-img img-fluid"
                         id="image">
                </figure>
            </div>


            <article id="tribute-info">

                <p>@anime.Desc</p>

            </article><a href="/comments?anime_id=@anime.Id"
        <h1 style="align-content:center">отзывы</h1>
        </main>

        <script src="../js/pageOfTitle.js"></script>

    </body>
</body>